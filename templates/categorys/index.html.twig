{% extends 'base.html.twig' %}

{% block title %}Categorys index{% endblock %}

{% block body %}
    <h1>Categorys index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categorys %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.categorie }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_categorys_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_categorys_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorys_new') }}">Create new</a>
{% endblock %}
